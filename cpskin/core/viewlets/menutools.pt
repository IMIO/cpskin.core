<div class="menutools menutools-viewlet" >
    <ul id="toolsbar">
        <li class="toolbox-menutools" tal:define="toolbox view/get_toolbox" tal:condition="view/get_toolbox">
            <a class="link-overlay" id="menutoolsbox" 
                tal:attributes="href toolbox/href" tal:content="toolbox/title">
                toolbox
            </a>
        </li>

        <li class="faceted-menutools" tal:define="faceted view/get_faceted" tal:condition="view/get_faceted">
            <a tal:attributes="href faceted/href" tal:content="faceted/title">faceted</a>
        </li>
    </ul>

</div>
