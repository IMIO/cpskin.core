<?xml version="1.0"?>
<portlets xmlns:i18n="http://xml.zope.org/namespaces/i18n"
          i18n:domain="plone">

 <!-- Restore Plone portlets with their default values -->

 <assignment
     manager="plone.rightcolumn"
     category="context"
     key="/"
     type="portlets.News"
     name="news"
     />

 <assignment
     manager="plone.rightcolumn"
     category="context"
     key="/"
     type="portlets.Events"
     name="events"
     />

 <assignment
     manager="plone.leftcolumn"
     category="context"
     key="/"
     type="portlets.Navigation"
     name="navigation">
  <property name="topLevel">1</property>
 </assignment>


 <!-- Remove portlets added by cpskin -->

 <assignment
     manager="plone.leftcolumn"
     category="context"
     key="/"
     type="cpskin.portlets.Photo"
     name="Photo"
     remove="True"
     />

 <assignment
     manager="plone.rightcolumn"
     category="context"
     key="/"
     type="cpskin.portlets.Firefox"
     name="Firefox"
     remove="True"
     />

 <assignment
     manager="plone.rightcolumn"
     category="context"
     key="/"
     type="portlets.Review"
     name="review"
     remove="True"
     />

</portlets>
