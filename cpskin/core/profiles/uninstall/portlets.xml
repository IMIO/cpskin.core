<?xml version="1.0"?>
<portlets xmlns:i18n="http://xml.zope.org/namespaces/i18n"
          i18n:domain="plone">

 <!-- Restore Plone portlets -->

 <assignment
     manager="plone.rightcolumn"
     category="context"
     key="/"
     type="portlets.News"
     name="news"
     />

 <assignment
     manager="plone.rightcolumn"
     category="context"
     key="/"
     type="portlets.Events"
     name="events"
     />


 <!-- Remove portlets added by cpskin -->

 <assignment
     manager="plone.rightcolumn"
     category="context"
     key="/"
     type="portlets.Classic"
     name="firefox-portlet"
     remove="True">
  <property name="template">portlet_firefox</property>
  <property name="macro">portlet</property>
 </assignment>

 <assignment
     manager="plone.rightcolumn"
     category="context"
     key="/"
     type="portlets.Review"
     name="review"
     remove="True" />

</portlets>
