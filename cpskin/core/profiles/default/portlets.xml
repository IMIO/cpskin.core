<?xml version="1.0"?>
<portlets xmlns:i18n="http://xml.zope.org/namespaces/i18n"
          i18n:domain="plone">

 <!-- Remove unneeded Plone portlets -->

 <assignment
     manager="plone.rightcolumn"
     category="context"
     key="/"
     type="portlets.News"
     name="news"
     remove="True"
     />

 <assignment
     manager="plone.rightcolumn"
     category="context"
     key="/"
     type="portlets.Events"
     name="events"
     remove="True"
     />


 <!-- Configure navigation portlet -->

 <assignment
     manager="plone.leftcolumn"
     category="context"
     key="/"
     type="portlets.Navigation"
     name="navigation">
  <property name="topLevel">3</property>
 </assignment>


 <!-- Add new portlets -->

 <assignment
     manager="plone.leftcolumn"
     category="context"
     key="/"
     type="cpskin.portlets.Photo"
     name="Photo"
     />

</portlets>
